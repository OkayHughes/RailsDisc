<div class="group_link">
<%= form_tag("/groups/add", method: "post") do %>
	<%= hidden_field_tag(:group_id, group.id) %>
	<%= hidden_field_tag(:user_id, current_user.id) %>
	<%= submit_tag(group.title, class: "link") %>
<% end %>
</div>
<div class="group_description">
	<%= group.description %>
</div>