<div class="post_form">	
<h1> New Post: </h1>	
<%= form_for @post, class: "input_group" do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<% if @post.parent %>
		<%= f.hidden_field :parent_id, value: @post.parent.id %>
	<% end %>
	<p class="post_title_form"> <%= f.text_field :title, placeholder: "Title", class: "form-control" %> </p>
	<p><%= f.collection_select :group_id, current_user.groups, :id, :title, {prompt: "Group"}, {class: "form-control"}%></p>
	<p> <%= f.text_area :content, cols: "170" , rows: "15", class: "form-control"%> </p>
	<p> <%= f.submit class: "btn btn-primary pull-right" %> </p>
<% end %>
</div>
<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
<script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>
