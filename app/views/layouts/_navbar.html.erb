<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
<div class="navbar_content">
	<%= link_to posts_path do %>
		<span style="font-size: 150%"class="glyphicon glyphicon-home"></span>
	<% end %>
	<span class="navbar_title"> Welcome to Discussion Board v0.1 </span>
	<span class="navbar_login">
		<% if signed_in? %>
			<div class="btn-group">
			 <button type="button" class="btn btn-default dropdown-toggle navbar_button" data-toggle="dropdown">
			 Groups <span class="caret"></span>
			 </button>
			  <ul class="dropdown-menu dropdown-menu-right" role="menu">
			  	<% get_groups(current_user).each do |g| %>
					<li><%= link_to g, root_url  %></li>
			  	<% end %>
			  </ul>
			 </div>

			<div class="btn-group">
			 <button type="button" class="btn btn-default dropdown-toggle navbar_button" data-toggle="dropdown">
			 User <span class="caret"></span>
			 </button>
			  <ul class="dropdown-menu dropdown-menu-right" role="menu">
			  	<li><%= link_to "Profile", current_user%></li>
			    <li><%= link_to "New Post", new_post_path %></li>
			    <li><%=link_to "Sign out", signout_path, method: "delete" %></li>
			  </ul>
			 </div>
		<% else %>
			<%= link_to "Sign in", controller: "sessions", action: "index"%>
		<% end %>
	</span>
</div>
</nav>